<div id="<%= dom_id tweet %>">
  <div class="col">
      <div class="card text-bg-info mb-3" style="max-width: 18rem;">
        <div class="card-header">
         
           <%= tweet.id %> - <%= tweet.username %>
        </div>
        <div class="card-body">
          <p class="card-text">
            <%= tweet.description%>
          </p>
          <%= link_to "Editar", edit_tweet_path(tweet),class:"btn btn-primary" %> |
          <%= button_to "Eliminar", tweet,class:"btn btn-danger", method: :delete %>
            
        </div>
        <div class="card-footer text-body-secondary">
          <%= tweet.updated_at%>
        </div>
      </div>
  </div>
</div>
